<% include ./header%>

    <br><br><br>

    <div class="col-lg-3" style="position: absolute; left: 0; top: 100px; background-color: rgba(0,0,0,.9); height: 100px">
        <center><h1 style="color: white"><%- user.first_name %> <%- user.last_name %></h1></center>
        <center><p style="color: white"><%- user.email %></p></center>
    </div>

    <div class="container">
        <br><br><br><br><br><br>
        <center><h2>Experience</h2></center>
        <% for(var i = 0; i < experience.length; i++){%>
        <div class="row">
            <h3><%- experience[i].job_position %></h3>
            <h4><%- experience[i].company_name %></h4>
            <em><p>Start Date - End Date</p></em>
            <p><%- experience[i].job_description %></p>
        </div>
        <%}%>
        <div class="btn btn-primary expBtn">
            Add an Experience
        </div>

        <form method="POST" action="addExperience" class="expForm">
            <div class="form-group">
              <label>company name</label>
              <input type="text" class="form-control" name="company_name" placeholder="Company Name">
            </div>
          <div class="form-group">
            <label>job position</label>
            <input type="text" class="form-control" name="job_position" placeholder="Job Position">
          </div>
          <div class="form-group">
            <label>job description</label>
            <textarea type="text" class="form-control" name="job_description" placeholder="Password"></textarea>
          </div>
          <input type="hidden" name="id" value="<%= user._id %>">
          <div class="row">
              <div class="col-lg-12">
                  <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </div>
        </form>

        <center><h2>Education</h2></center>
        <% for(var i = 0; i < education.length; i++){%>
        <div class="row">
            <h3><%- education[i].name_of_institution %></h3>
            <h4><%- education[i].degree %></h4>
            <em><p><%- education[i].field_of_study %></p></em>
        </div>
        <%}%>
        <div class="btn btn-primary eduBtn">
            Add an Education
        </div>

        <form method="POST" action="addEducation" class="eduForm">
            <div class="form-group">
              <label>Name of Institution</label>
              <input type="text" class="form-control" name="name_of_institution" placeholder="Name of Institution">
            </div>
          <div class="form-group">
            <label>degree</label>
            <input type="text" class="form-control" name="degree" placeholder="Degree">
          </div>
          <div class="form-group">
            <label>field of study</label>
            <input type="text" class="form-control" name="field_of_study" placeholder="Field of Study">
          </div>
          <input type="hidden" name="id" value="<%= user._id %>">
          <div class="row">
              <div class="col-lg-12">
                  <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </div>
        </form>
    </div>

<% include ./footer%>
